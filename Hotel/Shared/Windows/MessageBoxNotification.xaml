<Window x:Class="Hotel.Shared.Windows.MessageBoxNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="MessageBoxNotification" Height="92" Width="350" WindowStyle="None" Background="Gray" ResizeMode="NoResize" Loaded="Window_Loaded" Closing="Window_Closing" KeyDown="Window_KeyDown">
    <StackPanel VerticalAlignment="Bottom">
        <StackPanel VerticalAlignment="Center" Margin="0 10 0 0">
            <TextBlock x:Name="blkMessage" Foreground="White" FontFamily="Segoe UI" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="15"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Margin="5"  HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="btnOK" BorderBrush="White" BorderThickness="1" Background="#0096ff" Foreground="White" Style="{DynamicResource ButtonCleanStyle3}" Margin="5" Content="OK" Width="120" Height="30" IsDefault="True" Click="btnOK_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
