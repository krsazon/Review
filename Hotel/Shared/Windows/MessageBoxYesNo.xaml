<Window x:Class="Hotel.Shared.Windows.MessageBoxYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="MessageBoxYesNo" Height="92" Width="350" Background="Gray" Foreground="Black" WindowStyle="None" ResizeMode="NoResize" Loaded="Window_Loaded" Closing="Window_Closing" KeyDown="Window_KeyDown">
    <StackPanel VerticalAlignment="Bottom">
        <StackPanel DockPanel.Dock="Bottom">
            <TextBlock x:Name="blkMessage" Foreground="White" FontFamily="Segoe UI" Margin="0, 10, 0, 0" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Bottom" FontSize="15"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Margin="5"  HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <Button x:Name="btnYes" BorderBrush="White" BorderThickness="1" Background="#0096ff" Foreground="White" Style="{DynamicResource ButtonCleanStyle3}" Margin="5" Content="Yes" Width="75" Height="30" IsDefault="True" Click="btnYes_Click"/>
            <Button x:Name="btnNo" BorderBrush="White" BorderThickness="1" Background="#0096ff" Foreground="White" Style="{DynamicResource ButtonCleanStyle3}" Margin="5" Content="No" Width="75" Height="30" Click="btnNo_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
